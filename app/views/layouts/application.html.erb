<!DOCTYPE html>
<html>
  <head>
    <title>Pragprog Books Online Store</title>
    <%= stylesheet_link_tag "scaffold" %>
    <%= stylesheet_link_tag "depot", :media => "all" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body id="store" >
    <div id="banner" >
      <%= image_tag("logo.png") %>
      <%= @page_title || "Pragmatic Bookshelf" %>
    </div>
    <div id="columns" >
      <div id="side" >
        <div id="cart">
          <%= render @cart %>
        </div>
        <%= link_to "Home", root_url %><br />
        <%= link_to "Questions" %><br />
        <%= link_to "News" %><br />
        <%= link_to "Contact" %><br />
      </div>
      <div id="main" >
        <%= yield %>
      </div>
    </div>
  </body>
</html>
